<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sheepcao.dotaertest.myPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/info_back">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:src="@drawable/boysmall"
            app:riv_border_color="#bbbbbb"
            app:riv_border_width="1dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="repeat" />

        <TextView
            android:id="@+id/signature_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_head"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:lines="2"
            android:text="签名的力气都拿来打dota了!"
            android:textColor="#dddddd"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/gender_img"
            android:layout_width="19dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="43dp"
            android:layout_toLeftOf="@id/my_head"
            android:src="@drawable/female" />

        <TextView
            android:id="@+id/age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="47dp"
            android:layout_toRightOf="@id/my_head"
            android:text="19岁"
            android:textColor="#dddddd" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/main_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/game_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="游戏名字"
                android:textColor="#eeeeee"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/game_name"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:textSize="11sp"
                android:text="11游戏账号" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:background="#FF232323">

    </LinearLayout>


</LinearLayout>
